{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/src/index.js",
  "type": "commonjs",
  "scripts": {
    "start": "node dist/src/index.js",
    "dev": "npx ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "npm run build:tsoa && npm run db:generate && tsc",
    "build:prod": "node scripts/build.js",
    "build:full": "npm run build:tsoa && npm run db:generate && tsc",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "test": "jest",
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:seed": "ts-node prisma/seed.ts",
    "swagger": "tsoa spec",
    "swagger:optimize": "node scripts/optimize-swagger.js",
    "swagger:full": "npm run swagger && npm run swagger:optimize",
    "routes": "tsoa routes",
    "build:tsoa": "tsoa spec && tsoa routes",
    "lint": "eslint src/**/*.ts --ext .ts",
    "lint:fix": "eslint src/**/*.ts --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm run format:check",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "deps:check": "npm outdated",
    "deps:update": "npm update",
    "deps:clean": "rm -rf node_modules package-lock.json && npm install",
    "dev:clean": "npm run clean && npm run build:full",
    "dev:reset": "npm run deps:clean && npm run dev:clean"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.1.1",
    "node-escpos": "^0.0.3",
    "pdfkit": "^0.17.1",
    "pg": "^8.16.2",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/swagger-ui-express": "^4.1.8",
    "@faker-js/faker": "^9.8.0",
    "@prisma/client": "^6.10.1",
    "@tsoa/cli": "^6.6.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-serve-static-core": "^5.0.6",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.3",
    "@types/node-cron": "^3.0.11",
    "@types/pdfkit": "^0.14.0",
    "@types/pg": "^8.15.4",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "prisma": "^6.10.1",
    "prisma-json-schema-generator": "^5.1.5",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}
