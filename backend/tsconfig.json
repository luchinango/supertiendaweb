{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "*": ["*"],
      "@prisma/client": ["../prisma/generated"]
    },
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",   // Tus archivos fuente
    "types/**/*"  // AÃ±ade esto para asegurar que TS vea la carpeta
  ],
  "exclude": [
    "node_modules",
    "dist" // Excluye la carpeta de salida
  ]
}