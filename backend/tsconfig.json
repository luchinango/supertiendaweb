{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "jsx": "react",
      "noImplicitAny": true,
      "strictNullChecks": true
    },
    "include": ["src/**/*", "routes/productRoutes.ts", "models/product.ts"],
    "exclude": ["node_modules"]
  }