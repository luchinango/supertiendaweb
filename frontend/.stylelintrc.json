{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-tailwindcss"
    ],
    "rules": {
        "at-rule-no-unknown": null,
        "no-unused-vars": "off",
        "no-undef": "off"
    },
    "overrides": [
        {
            "files": ["**/*.css"],
            "customSyntax": "postcss-scss"
        }
    ],
    "plugins": [
        "stylelint-tailwindcss"
    ]
}